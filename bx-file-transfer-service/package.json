{
  "name": "bx-file-transfer-service",
  "version": "0.0.1",
  "private": true,
  "description": "Simple service to transfer files from one location to another",
  "license": "GNU GPLv3",
  "author": "BonusX",
  "scripts": {
    "build": "nest build",
    "create:index": "cti index -n ./src/decorators ./src/dtos ./src/exceptions",
    "format": "prettier --write ./src/**/*.ts ./test/**/*.ts",
    "lint": "eslint ./src/**/*.ts --fix",
    "lint:report": "eslint ./src/**/*.ts -f json -o eslint-report.json",
    "pre-commit": "npx pretty-quick --staged -ignore-path=.prettierignore",
    "prepare": "cd .. ; husky install",
    "prettier": "prettier --write ./src/",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "reporters": [
      "default",
      [
        "jest-sonar",
        {
          "outputDirectory": "./",
          "outputName": "test-report.xml"
        }
      ]
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.5",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.5",
    "@nestjs/microservices": "^10.0.5",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/schedule": "^3.0.1",
    "@nestjs/terminus": "^10.0.1",
    "@ntegral/nestjs-sentry": "^4.0.0",
    "@sentry/node": "^7.57.0",
    "moment": "^2.29.4",
    "mqtt": "^4.3.7",
    "nest-winston": "^1.9.3",
    "rxjs": "^7.8.1",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@automock/jest": "^1.2.1",
    "@nestjs/cli": "^10.1.7",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.5",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.2",
    "@types/node": "20.4.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "create-ts-index": "^1.14.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "29.6.1",
    "jest-mock": "^29.6.1",
    "jest-sonar": "^0.2.16",
    "prettier": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  }
}
